@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>
<html>
    <head>
        <meta name = "veiwport" content="width=device-width" />
        <title>
           Сотрудники
        </title>
    </head>

    <body>
        <h3>
            Сотрудники
        </h3>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                    <th>Карточка сотрудника</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a href="~/home/EmployeeCard/@employee.Id">Подробнее</a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
        <hr/>
        <a href="~/">На главную</a>
    </body>
</html>