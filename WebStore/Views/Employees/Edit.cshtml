@model WebStore.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Редактирование сотрудника Id:";
}

<div class ='container'>
   
    <div>
    <h4>Сотрудник - @Model.FirstName @Model.LastName </h4>
    <hr />
    <dl class="row">
        <form asp-action="Edit" asp-all-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmploymentDate" class="control-label"></label>
                <input asp-for="EmploymentDate" class="form-control" />
                <span asp-validation-for="EmploymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="submit" value="Save" class="btn btn-primary" />
                
            </div>

        </form>

    </dl>
</div>
<div>
    <a asp-action="Index">Назад к списку</a>
    @*<a asp-controller="Employees" asp-action="Delete" asp-route-id="@Model.Id" class="text-danger">Удалить</a>*@
     
</div>


</div>




